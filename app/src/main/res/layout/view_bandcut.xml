<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:padding="5dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="頻帶"
            android:id="@+id/label_view_bandcut"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#0080ff"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">


            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="6"
                android:id="@+id/lowBand_view_bandcut"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:id="@+id/middle_view_bandcut"
                android:text="~"
                android:textColor="#0080ff"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/lowBand_view_bandcut"
                android:layout_toEndOf="@+id/lowBand_view_bandcut" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="6"
                android:id="@+id/highBand_view_bandcut"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/middle_view_bandcut"
                android:layout_toEndOf="@+id/middle_view_bandcut" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>